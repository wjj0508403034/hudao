<UserControl x:Class="hudao.Views.Common.CirclePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:Name="Panel"
             mc:Ignorable="d" Width="{Binding ActualHeight,ElementName=Panel}" Background="Transparent"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Background="White" CornerRadius="{Binding ActualHeight,ElementName=Panel,Converter={StaticResource CircleCornerRadiusConverter}}">
        <ContentPresenter x:Name="ContentPresenter"></ContentPresenter>
    </Border>
</UserControl>
