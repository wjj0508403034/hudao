<UserControl x:Class="hudao.Views.Common.TitlePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/" mc:Ignorable="d" Height="50" BorderBrush="{DynamicResource LineBrush}" BorderThickness="0,0,0,1"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="BackButton" Style="{DynamicResource IconButtonStyle}" Click="OnBackButtonClick" >
            <fa:ImageAwesome Icon="AngleLeft"/>
        </Button>
        <TextBlock x:Name="TitleContent" Grid.Column="1" HorizontalAlignment="Center" FontSize="20" VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
