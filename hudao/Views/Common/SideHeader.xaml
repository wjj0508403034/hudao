<UserControl x:Class="hudao.Views.Common.SideHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" BorderBrush="{DynamicResource LineBrush}" BorderThickness="0,0,0,1"
             xmlns:fa="http://schemas.fontawesome.io/icons/" mc:Ignorable="d" Height="50"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Button Style="{DynamicResource IconButtonStyle}" Click="OnMenuButtonClicked">
            <fa:ImageAwesome Icon="Bars"/>
        </Button>
        <Button Style="{DynamicResource IconButtonStyle}" Grid.Column="2">
            <fa:ImageAwesome Icon="Search"/>
        </Button>
        <Button Style="{DynamicResource IconButtonStyle}" Grid.Column="3" Click="OnPlusButtonClicked">
            <fa:ImageAwesome Icon="Plus"/>
        </Button>
        
    </Grid>
</UserControl>
