<Controls1:BasicGroupListPanelControl x:Class="hudao.Views.Inventory.ListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls1="clr-namespace:hudao.Core.Controls"
                                      xmlns:GroupList="clr-namespace:Controllers.Controls.GroupList;assembly=Controllers"
                                      mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupList:GroupListBox x:Name="TestListBox"   GroupMemberPath="CreateTime"   >
            <GroupList:GroupListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Red" BorderThickness="1" Height="30">
                        <TextBlock Text="{Binding .}"></TextBlock>
                    </Border>
                </DataTemplate>
            </GroupList:GroupListBox.ItemTemplate>
        </GroupList:GroupListBox>
    </Grid>
</Controls1:BasicGroupListPanelControl>
