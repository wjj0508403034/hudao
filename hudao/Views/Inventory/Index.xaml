             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Inventory="clr-namespace:hudao.Views.Inventory" xmlns:Core="clr-namespace:hudao.Core"
              mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
