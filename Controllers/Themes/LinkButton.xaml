<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Buttons="clr-namespace:Controllers.Controls.Buttons">
  
    <Style TargetType="{x:Type Buttons:LinkButton}">
        <Setter Property="Foreground" Value="{DynamicResource ThemeBrush}"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Buttons:LinkButton}">
                    <Border Name="border" >
                        <Border BorderBrush="{DynamicResource ThemeBrush}" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                            <ContentPresenter Margin="0,2" Name="content" VerticalAlignment="Center" />
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
